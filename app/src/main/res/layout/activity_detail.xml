<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leejangyoun.multiviewpager.detail.DetailActivity">


    <com.pixplicity.multiviewpager.MultiViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="94dp"
        android:layout_marginTop="42dp"
        app:matchChildWidth="@+id/vg_cover" />

    <FrameLayout
        android:id="@+id/btn_qna_write"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/floating_write_btn" />
    </FrameLayout>

</FrameLayout>